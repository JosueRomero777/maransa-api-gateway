# API Gateway Configuration
PORT=8080
NODE_ENV=development

# Service Discovery (opcional - puede deshabilitarse)
CONSUL_HOST=
CONSUL_PORT=8500
SERVICE_NAME=api-gateway
SERVICE_ID=api-gateway-1

# Microservices URLs
# OPCIÓN 1: Backend monolito (recomendado para empezar)
BACKEND_MONOLITH_URL=http://localhost:3000

# OPCIÓN 2: Microservicios separados (avanzado)
# AUTH_SERVICE_URL=http://localhost:3000
# ORDERS_SERVICE_URL=http://localhost:3001
# LOGISTICS_SERVICE_URL=http://localhost:3002
# INVOICING_SERVICE_URL=http://localhost:3003

# Microservicios externos (siempre separados)
AI_SERVICE_URL=http://localhost:8000
SRI_SERVICE_URL=http://localhost:9000

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRATION=24h

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# CORS
CORS_ORIGIN=http://localhost:5173
